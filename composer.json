{
  "name": "netlogix/nximageoptimizer",
  "description": "Optimize images when they are processed by the resource publisher",
  "type": "typo3-cms-extension",
  "license": "MIT",
  "require": {
    "php": "^7.4 || ^8.0",
    "typo3/cms-core": "^10.4 || ^11.5"
  },
  "require-dev": {
    "ext-sqlite3": "*",
    "nimut/testing-framework": "^6.0",
    "nimut/phpunit-merger": "^1.1"
  },
  "autoload": {
    "psr-4": {
      "Netlogix\\Nximageoptimizer\\": "Classes"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Netlogix\\Nximageoptimizer\\Tests\\": "Tests/"
    }
  },
  "extra": {
    "typo3/cms": {
      "extension-key": "nximageoptimizer",
      "web-dir": ".Build/Web",
      "cms-package-dir": "{$vendor-dir}/typo3/cms"
    }
  },
  "config": {
    "vendor-dir": ".Build/vendor",
    "bin-dir": ".Build/bin",
    "allow-plugins": {
      "typo3/class-alias-loader": true,
      "typo3/cms-composer-installers": true
    }
  },
  "scripts": {
    "post-autoload-dump": [
      "@prepare-extension-test-structure",
      "mkdir --parents .Build/logs/"
    ],
    "prepare-extension-test-structure": [
      "Nimut\\TestingFramework\\Composer\\ExtensionTestEnvironment::prepare"
    ]
  }
}
